    {
      "id": "filesystem",
      "name": "Filesystem",
      "package": "@modelcontextprotocol/server-filesystem",
      "category": "system",
      "icon": "pi-folder",
      "description": "Acceso seguro al sistema de archivos. Permite leer, escribir y manipular archivos dentro de directorios específicos.",
      "capabilities": ["tools", "resources"],
      "requiresConfig": true,
      "configSchema": {
        "allowedPaths": {
          "type": "array",
          "required": true,
          "description": "Rutas permitidas para acceso",
          "example": ["C:/Users/Documents", "/home/user/projects"]
        }
      },
      "tools": [
        "read_file",
        "write_file",
        "list_directory",
        "create_directory",
        "move_file",
        "search_files"
      ],
      "useCases": [
        "Leer y escribir archivos de código",
        "Navegación del sistema de archivos",
        "Búsqueda de archivos por patrón",
        "Gestión de directorios de proyecto"
      ],
      "website": "https://github.com/modelcontextprotocol/servers"
    },
    {
      "id": "github",
      "name": "GitHub",
      "package": "@modelcontextprotocol/server-github",
      "category": "development",
      "icon": "pi-github",
      "description": "Interactuar con repositorios de GitHub: crear issues, pull requests, buscar código y gestionar repositorios.",
      "capabilities": ["tools"],
      "requiresConfig": true,
      "configSchema": {
        "token": {
          "type": "string",
          "required": true,
          "description": "Token de acceso personal de GitHub",
          "secret": true
        },
        "owner": {
          "type": "string",
          "required": false,
          "description": "Usuario u organización por defecto"
        },
        "repo": {
          "type": "string",
          "required": false,
          "description": "Repositorio por defecto"
        }
      },
      "tools": [
        "create_issue",
        "create_pull_request",
        "search_repositories",
        "search_code",
        "get_file_contents",
        "push_files"
      ],
      "useCases": [
        "Crear issues desde conversaciones",
        "Buscar código en repositorios",
        "Gestionar pull requests",
        "Automatizar workflows de Git"
      ],
      "website": "https://github.com/modelcontextprotocol/servers"
    },
    {
      "id": "sqlite",
      "name": "SQLite",
      "package": "@modelcontextprotocol/server-sqlite",
      "category": "data",
      "icon": "pi-database",
      "description": "Ejecutar consultas SQL sobre bases de datos SQLite. Acceso seguro con consultas read-only por defecto.",
      "capabilities": ["tools"],
      "requiresConfig": true,
      "configSchema": {
        "databasePath": {
          "type": "string",
          "required": true,
          "description": "Ruta a la base de datos SQLite",
          "example": "C:/data/mydb.sqlite"
        },
        "readOnly": {
          "type": "boolean",
          "required": false,
          "description": "Modo solo lectura (recomendado)",
          "default": true
        }
      },
      "tools": [
        "execute_query",
        "list_tables",
        "describe_table",
        "get_schema"
      ],
      "useCases": [
        "Análisis de datos",
        "Consultas SQL interactivas",
        "Exploración de esquemas de BD",
        "Generación de reports"
      ],
      "website": "https://github.com/modelcontextprotocol/servers"
    },
    {
      "id": "postgres",
      "name": "PostgreSQL",
      "package": "@modelcontextprotocol/server-postgres",
      "category": "data",
      "icon": "pi-database",
      "description": "Conectar y consultar bases de datos PostgreSQL. Soporta queries complejas y análisis de datos.",
      "capabilities": ["tools", "resources"],
      "requiresConfig": true,
      "configSchema": {
        "connectionString": {
          "type": "string",
